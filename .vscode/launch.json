{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // Use IntelliSense to learn about possible attributes.
            "name": "Solara: Launch",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/solara",
            "args": [
                "run",
                "hmtc/pages",
                "--port=8767",
                "--restart-dir",
                "${workspaceFolder}/hmtc/components/",
                "--restart-dir",
                "${workspaceFolder}/hmtc/schemas/"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "BROWSER": "echo",
                "HMTC_ENV": "development",
                "HMTC_CONFIG_PATH": "${workspaceFolder}/hmtc/config",
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/hmtc"
            }
        },
        {
            // Use IntelliSense to learn about possible attributes.
            "name": "Flask: Launch",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/flask",
            "args": [
                "run",
                "--port=8767",
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "BROWSER": "echo",
                "FLASK_APP": "hmtc/app.py",
                "SOLARA_APP": "hmtc/pages",
                "HMTC_ENV": "development",
                "HMTC_CONFIG_PATH": "${workspaceFolder}/hmtc/config",
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/hmtc"
            }
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "HMTC_ENV": "development",
                "HMTC_CONFIG_PATH": "${workspaceFolder}/hmtc/config",
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/hmtc"
            },
        }
    ]
}